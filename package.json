{
  "name": "aws-serverless-typescript-graphql-api",
  "version": "1.1.36",
  "author": "Kristiyan Doykov (kdoykov99@gmail.com)",
  "license": "MIT",
  "description": "Serverless aws-nodejs-typescript GraphQL API",
  "main": "serverless.ts",
  "scripts": {
    "docker:up": "docker-compose -f local.docker-compose.yml up -d",
    "docker:down": "docker-compose -f local.docker-compose.yml down",
    "predev": "yarn docker:up",
    "dev": "yarn typecheck && sls offline start",
    "lint": "eslint --config ./.eslintrc --ext .ts ./src",
    "codegen": "graphql-codegen --config codegen.ts",
    "typecheck": "tsc --noEmit",
    "local:seed-db": "node src/resolvers/queries/seed.js",
    "predeploy": "yarn tf:init && yarn tf:refresh && yarn tf:format && yarn tf:validate && yarn tf:plan && yarn tf:apply",
    "deploy": "sls deploy",
    "destroy": "sls remove && yarn tf:destroy && yarn remove-env-ns && yarn remove-env-hz",
    "remove-env-ns": "./scripts/remove_ns_record_from_hz.sh",
    "remove-env-hz": "./scripts/delete_hz.sh",
    "integration-tests": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.int.config.ts --detectOpenHandles",
    "pretest:int": "yarn docker:up",
    "test:int": "yarn npm-run-all integration-tests docker:down --continue-on-error",
    "ci:test:int": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.int.config.ts --detectOpenHandles",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.unit.config.ts",
    "test:all": "yarn test:int && yarn test:unit",
    "ci:test:all": "yarn ci:test:int && yarn test:unit",
    "tf:init": "cd terraform && terraform init -backend-config=backend.conf",
    "tf:format": "cd terraform && terraform fmt -recursive",
    "tf:validate": "cd terraform && terraform validate",
    "tf:plan": "cd terraform && terraform plan",
    "tf:refresh": "cd terraform && terraform refresh",
    "tf:apply": "cd terraform && terraform apply -auto-approve",
    "tf:destroy": "cd terraform && terraform destroy -auto-approve"
  },
  "dependencies": {
    "@apollo/server": "^4.10.1",
    "@codegenie/serverless-express": "^4.14.0",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/schema": "^10.0.3",
    "@middy/core": "^5.2.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "express": "^4.18.3",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-rate-limit-directive": "^2.0.5",
    "json-2-csv": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.4",
    "pg-hstore": "^2.3.4",
    "ramda": "^0.29.1",
    "rate-limiter-flexible": "^5.0.0",
    "request-ip": "^3.3.0",
    "sequelize": "^6.37.1",
    "sequelize-cli-esm": "^5.0.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@parcel/watcher": "^2.4.1",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.136",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.27",
    "@types/pg": "^8.11.2",
    "@types/ramda": "^0.29.11",
    "@types/request-ip": "^0.0.41",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "json-schema-to-ts": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "serverless": "^3.38.0",
    "serverless-domain-manager": "^7.3.8",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.3.1"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
